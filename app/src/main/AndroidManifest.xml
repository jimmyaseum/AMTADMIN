        tools:replace="android:allowBackup"
        android:exported="true">

        <activity
            android:name="com.app.amtadminapp.activity.SplashActivity"
            android:exported="true">

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />
             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity
            android:name="com.app.amtadminapp.activity.WelcomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.app.amtadminapp.activity.StartActivity"
