<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:id="@+id/txtTourBookingNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <!--PickUpDate-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pickup Date"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtPickUpDate"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:drawableTint="@color/gray8"
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"/>
            </LinearLayout>

            <!--PickupTime-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pickup Time"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtPickupTime"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/aaa"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:drawableTint="@color/gray8" />
            </LinearLayout>

            <!--PickupPlace-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pickup Place"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtPickupPlace"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>

            <!--DropDate-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Drop Date"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtDropDate"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/aaa"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:drawableTint="@color/gray8"/>
            </LinearLayout>

            <!--DropTime-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Drop Time"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtDropTime"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/aaa"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:drawableTint="@color/gray8" />
            </LinearLayout>

            <!--DropPlace-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Drop Place"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtDropPlace"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>

            <!--HotelVoucherNo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Hotel Voucher No"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtHotelVoucherNo"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>

            <!--RouteVoucherNo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Route Voucher No"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtRouteVoucherNo"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>

            <!--VenderName-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Vender Name"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtVenderName"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/aaa"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:drawableTint="@color/gray8" />
            </LinearLayout>

            <!--VehicleType-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Vehicle Type"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtVehicleType"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>

            <!--BusSeat-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Seat No"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtBusSeat"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="number" />
            </LinearLayout>

            <!--TicketBookBy-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Ticket Booked By"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtTicketBookBy"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:editable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:clickable="true"
                    android:background="@drawable/aaa"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:drawableTint="@color/gray8" />
            </LinearLayout>

            <!--FlightNo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Flight No / Train No"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtFlightNo"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>

            <!--TicketNo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Ticket No"
                    android:textColor="@color/gray8"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtTicketNo"
                    style="@style/TextViewStyleRegular"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:background="@drawable/aaa"
                    android:inputType="textCapCharacters" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/LLcardButtonNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="@dimen/_5sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        style="@style/buttonText"
                        android:text="Save" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>