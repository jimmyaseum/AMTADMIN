<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
    android:layout_width="@dimen/_100sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Left View-->
            <View
                android:id="@+id/viewLeftLine"
                style="@style/DividerHorizontal"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/llStepNumberContainer"
                android:background="@color/colorAccent" />

            <!--Right View-->
            <View
                android:id="@+id/viewRightLine"
                style="@style/DividerHorizontal"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/llStepNumberContainer"
                android:background="@color/colorAccent" />

            <!--Square Step Number - Clickable Box-->
            <LinearLayout
                android:id="@+id/llStepNumber"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp" />

            <LinearLayout
                android:id="@+id/llStepNumberContainer"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/bg_transparent_with_primary_semi_rounded_corner">

                <TextView
                    android:id="@+id/tvStepNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="1"
                    android:background="@color/colorTransparent"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

        </RelativeLayout>

        <!--Step Name-->
        <TextView
            android:id="@+id/tvStepTitle"
            style="@style/TextViewStyleRegular"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>
</layout>
