<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Account"
            android:textColor="@color/colorgreenish20"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp">

            <!--First Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="First Name"
                android:textColor="@color/colortextTitle"
                android:textSize="@dimen/_10sdp" />
            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/poppins_medium"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:text=""
                android:textColor="@color/colorgreenish20"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/colorLightGray" />
            <TextView
                android:id="@+id/txt_error_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Enter first name"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"/>

            <!--Last Name-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Last Name"
                android:textColor="@color/colortextTitle"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>
            <EditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/poppins_medium"
                android:imeOptions="actionNext"
                android:inputType="textCapCharacters"
                android:text=""
                android:textColor="@color/colorgreenish20"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/colorLightGray" />
            <TextView
                android:id="@+id/txt_error_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Enter last name"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"/>

            <!--MobileNo-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Mobile Number"
                android:textColor="@color/colortextTitle"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp" />
            <EditText
                android:id="@+id/edtMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/poppins_medium"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="15"
                android:text=""
                android:textColor="@color/colorgreenish20"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/colorLightGray" />
            <TextView
                android:id="@+id/txt_error_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Enter mobile number"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"/>

            <!--Email-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Email"
                android:textColor="@color/colortextTitle"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp" />
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/poppins_medium"
                android:imeOptions="actionDone"
                android:inputType="textCapWords"
                android:text=""
                android:textColor="@color/colorgreenish20"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="@color/colorLightGray" />
            <TextView
                android:id="@+id/txt_error_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Enter email"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/LLcardButtonSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                app:cardBackgroundColor="@color/colorgreenish100"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_30sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        style="@style/buttonText"
                        android:textAllCaps="true"
                        android:text="Sign Up" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="already have an account?"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12sdp"/>
            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_login"
                android:textColor="@color/colorgreenish100"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>